<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.ScrapbookViewFragment">

    <FrameLayout
        android:id="@+id/scrapbook_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="48dp"
        android:layout_weight="1">
        <androidx.fragment.app.FragmentContainerView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/page_fragment"
            android:name="com.group04.scrapbookwidget.ui.PageFragment"/>
    </FrameLayout>
    <Button
        style="?attr/materialIconButtonFilledStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:contentDescription="Take new picture"
        app:icon="@drawable/photo_camera_24"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>